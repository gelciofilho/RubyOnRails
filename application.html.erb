<!DOCTYPE html>
<html>
  <head>
    <title>GF Sports Recruitment</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'  %>

    <style>
      body {
        background-color: #66a3ff;
        text-align:center;
      }

      h1 {
      color: #000066;
      }
      
      label{
        display: inline-block;
        position: relative;
  	padding-left: 5px;
  	margin-bottom: 8px;
  	cursor: pointer;
 	font-size: 12px;
  	-webkit-user-select: none;
 	 -moz-user-select: none;
 	 -ms-user-select: none;
 	 user-select: none;
      }
      table {
        border-collapse: collapse;
        background-color: #ffffff;
	width: 100%;

        
      }
      tr:nth-child(even) {
       background-color: #f2f2f2;
      }
      
      td {
      text-align: center;
      font-size: 14px;
      }

      tr {
      font-size: 14px;
      text-align:center;
      }

      input[type=text] {
      width: 50%;
      padding: 12px 12px;
      margin: 8px 0;
     box-sizing: border-box;
     }
    
    </style>

  </head>

  <body>

	 <h1><center> GF Sports Recruitment </center></h1>
         </br>
         <hr>
 
 

	  <button class="btn candidate"><%= link_to "Candidate", candidates_path %></button>
          <button class="btn skill"><%= link_to "Skill", skills_path %></button>        
  

   

    <%= yield %>
  </body>
</html>
